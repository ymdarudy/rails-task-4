<p id="notice"><%= notice %></p>

<div class="show">
  <p>
    <strong>物件名:</strong>
    <%= @rental_property.name %>
  </p>

  <p>
    <strong>賃料:</strong>
    <%= @rental_property.rent.to_s(:delimited) %>円
  </p>

  <p>
    <strong>住所:</strong>
    <%= @rental_property.address %>
  </p>

  <p>
    <strong>築年数:</strong>
    <%= @rental_property.age %>年
  </p>

  <p>
    <strong>備考:</strong>
    <%= @rental_property.note %>
  </p>
</div>

<hr>

<% unless @rental_property.nearest_stations %>
  <p>最寄り駅の情報はありません。</p>
<% else %>
  <% @rental_property.nearest_stations.each_with_index do |station, i| %>
    <h3><%= "最寄り駅#{i + 1}" %></h3>
    <div class="show">
      <p>
        <strong>路線名:</strong>
        <%= station.line %>
      </p>

      <p>
        <strong>駅名:</strong>
        <%= station.name %>円
      </p>

      <p>
        <strong>徒歩分数:</strong>
        <%= station.walking_minutes %>分
      </p>
    </div>
  <% end %>
<% end %>

<%= link_to '編集', edit_rental_property_path(@rental_property) %> |
<%= link_to '戻る', rental_properties_path %>
